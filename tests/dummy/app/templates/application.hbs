<h2 id='title'>MB-PopOver</h2>
<div class="make-it-scroll">
  <div class="inner">
    <div class="pop-overs">
      {{#pop-over anchor-attachment="bottom middle" body-attachment="top middle" as |p|}}
        {{#p.anchor}}bottom centered{{/p.anchor}}
        {{#p.body}}
          {{lorem-ipsum}}
        {{/p.body}}
      {{/pop-over}}

      {{#pop-over anchor-attachment="top right" body-attachment="bottom left" as |p|}}
        {{#p.anchor}}top right{{/p.anchor}}
        {{#p.body}}
          {{lorem-ipsum}}
        {{/p.body}}
      {{/pop-over}}

      {{#pop-over anchor-attachment="bottom left" body-attachment="top left" as |p|}}
        {{#p.anchor}}bottom left{{/p.anchor}}
        {{#p.body}}
          {{lorem-ipsum}}
        {{/p.body}}
      {{/pop-over}}
    </div>

    <p>
      By default the pop-over closes when the body is clicked,
      set <code>interactive=true</code> to override this behaviour
      so you can manually close it when you want
    </p>

    <div class="pop-overs">
      {{#pop-over as |p|}}
        {{#p.anchor}}interactive{{/p.anchor}}
        {{#p.body interactive=true}}

          {{#pop-over as |n|}}
            {{#n.anchor}}nested{{/n.anchor}}
            {{#n.body}}
              {{lorem-ipsum}}
            {{/n.body}}
          {{/pop-over}}

        {{/p.body}}
      {{/pop-over}}
    </div>

  </div>
</div>